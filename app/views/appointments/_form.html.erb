<%= simple_form_for(@appointment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :patient, collection: Patient.order(:name), prompt: "Choose a Patient" %>
    <%= f.input :start_time, :minute_step => 15 , start_hour: 8, end_hour: 20  %>
    <%= f.input :end_time, :minute_step => 15 , start_hour: 8, end_hour: 20 %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success" %>
  </div>
<% end %>
