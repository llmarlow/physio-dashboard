<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Appointments</h1>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Patient</th>
          <th>Date</th>
          <th>Time</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @appointments.each do |appointment| %>
          <tr>
            <td><%= appointment.patient.name %></td>
            <td><%= appointment.start_time.strftime("%A, %d %b %Y") %></td>
            <td><%= appointment.start_time.strftime(" %l:%M %p") %> - <%= appointment.end_time.strftime(" %l:%M %p") %></td>
            <td><%= link_to 'Show', appointment %></td>
            <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
            <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>
<%= will_paginate @appointments, renderer: BootstrapPagination::Rails %>
<%= link_to 'New Appointment', new_appointment_path %>
