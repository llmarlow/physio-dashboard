<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= @patient.name %> (<%= @patient.phone_number %>)</h1>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Date</th>
          <th>Time</th>
          <th>Status</th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
        <% @appointments.each do |appointment| %>
          <tr>
            <td><%= appointment.start_time.strftime("%A, %d %b %Y") %></td>
            <td><%= appointment.start_time.strftime(" %l:%M %p") %> - <%= appointment.end_time.strftime(" %l:%M %p") %></td>

            <td><%= link_to appointment.patient.name, root_path, class: "btn btn-default" %></td>

            <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
            <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'Edit', edit_patient_path(@patient) %> |
    <%= link_to 'Back', patients_path %>
  </div>
</div>